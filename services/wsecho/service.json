{
  "id": "wsecho",
  "name": "WebSocket Echo",
  "description": "Sample WebSocket server that echos back all received messages.",
  "enabled": false,
  "status": "30",
  "logoutput": "",
  "icon": "pi pi-globe",
  "servicetype": 10,
  "execconfig": {
    "execservice": { "id": "python" },
    "setup": {
      "win32": [
        "get-pip.py",
        "-m pip install --ignore-installed --target=${SERVICE_PATH}\\__packages__ -r ${SERVICE_PATH}\\requirements.txt"
      ],
      "darwin": [
        "-m pip install --ignore-installed --target=${SERVICE_PATH}/__packages__ -r ${SERVICE_PATH}/requirements.txt"
      ],
      "linux": [
        "-m pip install --ignore-installed --target=${SERVICE_PATH}/__packages__ -r ${SERVICE_PATH}/requirements.txt"
      ],
      "default": [
        "-m pip install --ignore-installed --target=${SERVICE_PATH}\\__packages__ -r ${SERVICE_PATH}\\requirements.txt"
      ]
    },
    "commandline": "-m uvicorn main:app --host localhost --port ${SERVICE_PORT} --app-dir ${SERVICE_PATH}",
    "serviceport": 8000,
    "healthcheck": {
      "type": "http",
      "url": "http://localhost:${SERVICE_PORT}/",
      "expected_status": 200
    }
  },
  "actions": {
    "stop": {
      "name": "stop",
      "path": "...",
      "commanline": "..."
    },
    "start": {
      "name": "start",
      "path": "...",
      "commanline": "..."
    }
  }
}

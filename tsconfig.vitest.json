{
  "extends": "@vue/tsconfig/tsconfig.node.json",
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue", "src/**/*.json"],
  "compilerOptions": {
    "composite": true,
    "experimentalDecorators": true,
    "suppressImplicitAnyIndexErrors": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node", "jsdom"],
    "typeRoots": [
      "src/types",
      "node_modules/@types",
    ],
  },
}
